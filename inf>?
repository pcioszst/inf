#include <iostream>

using namespace std;

int a,b,c,d;

int main()
{
cout <<"wprowadz pierwsza liczba  ";
cin >> a;
c=a;
cout <<"wprowadz druga liczba  ";
cin >> b;
d=b;
while(a != b)
    if(a > b) a = a - b;
    else b = b - a;
cout <<a<<" jest najwiekszym wspolnym dzielnikiem liczb "<<c<<" oraz "<<d <<endl;
return 0;
}



#include <iostream>
