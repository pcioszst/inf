int main()
{
    cout <<"wprowadzpierwsza liczbe  ";
    cin >> a;
    c=a;
    cout << "Wprowadz druga liczbe  ";
    cin >> b;
    d=b;
while (b!=0)
{
reszta=a % b;
a=b;
b=reszta;
}
cout << a <<" jest najwiekszym dzielnikiem liczb "<<c<<" oraz "<<d <<endl;
cout << c*d/a <<"jest najmniejsza wspolna wielokrotnoscia liczb "<<c<< " oraz "<<d <<endl;
